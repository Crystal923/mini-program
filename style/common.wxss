.list_item {
  height: 84rpx;
  padding: 0 24rpx;
  border-bottom: 1rpx dashed #e7e7ef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_text {
  font-family: '微软雅黑';
  background-image: -webkit-linear-gradient(left, #f96, #e6d205 25%, #f96 50%, #e6d205 75%, #f96);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-size: 28rpx;
}

.list_item .item_img {
  width: 28rpx;
  height: 28rpx;
}

.btn_group {
  margin: 100rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.btn_normal {
  width: 48%;
  margin: 20rpx auto;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 72rpx;
  color: #a9a9a9;
  font-size: 28rpx;
  background: #0ff;
}

.btn_normal::after {
  border: none;
}

