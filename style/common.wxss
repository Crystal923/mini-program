.list_item {
  height: 72rpx;
  padding: 0 24rpx;
  border-bottom: 1rpx dashed #e7e7ef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_text {
  font-family: '微软雅黑';
  background-image: -webkit-linear-gradient(left, #f96, #e6d205 25%, #f96 50%, #e6d205 75%, #f96);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.list_item .item_img {
  width: 28rpx;
  height: 28rpx;
}

.btn_group {
  margin: 100rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.btn_normal {
  width: 72%;
  margin: 20rpx auto;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 75rpx/75rpx;
  color: white;
  font-size: 32rpx;
  background: linear-gradient(to bottom, #f96 0%, #e6d205 100%);
}

.btn_normal::after {
  border: none;
}

.btn_small {
  width: 280rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 75rpx/75rpx;
  color: white;
  font-size: 32rpx;
  background: linear-gradient(to bottom, #f96 0%, #e6d205 100%);
}

.btn_small::after {
  border: none;
}
