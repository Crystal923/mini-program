.swiper_container {
  width: 100%;
  height: 100vh;
}

.swiper_container .swiper {
  width: 100%;
  height: 100vh;
}

.swiper_container .swiper .swiper_item {
  height: calc(100vh - 360rpx) !important;
  margin: 180rpx 0;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.swiper_container .swiper .current_item {
  height: calc(100vh - 180rpx) !important;
  margin: 90rpx 0;
}

.swiper_container .swiper .swiper_item view {
  height: 100%;
  width: 100%;
  background-color: #fedcba;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.swiper_container .swiper .current_item view {
  background-color: #fed;
}
