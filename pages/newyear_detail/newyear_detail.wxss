.newyear_detail {
  background-color: #e7e7e7;
  height: 100vh;
  box-sizing: border-box;
}

.newyear_detail .movable-area {
  width: 100%;
  height: 100%;
}

.newyear_detail  .card-item {
  background-color: DarkRed;
  width: calc(100% - 240rpx);
  height: 200rpx;
  position: absolute;
  top: 180rpx;
  left: 120rpx;
  bottom: 180rpx;
  right: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 20rpx;
}
