.loading {
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.5);
  box-sizing: border-box;
  padding: 240rpx 0 0;
  position: relative;
  z-index: 2000;
  font-family: "Microsoft YaHei";
}

.loading .loading_icon {
  display: block;
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
}

.loading .loading_text {
  display: block;
  width: 100%;
  text-align: center;
  color: #3b3b3b;
  font-size: 32rpx;
  margin-top: 39rpx;
}

.loading_box {
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
}

.loading_box>view {
  display: inline-block;
}

.pulse {
  width: 8rpx;
  height: 24rpx;
  background: #ff523c;
  margin: 8rpx;
  border-radius: 20rpx;
}

.pulse_1 {
  -webkit-animation: pulse 0.5s linear infinite alternate;
  animation: pulse 0.5s linear infinite alternate;
}

.pulse_2 {
  -webkit-animation: pulse 0.5s linear infinite alternate;
  animation: pulse 0.5s linear infinite alternate;
  animation-delay: 0.1s;
}

.pulse_3 {
  -webkit-animation: pulse 0.5s linear infinite alternate;
  animation: pulse 0.5s linear infinite alternate;
  animation-delay: 0.2s;
}

.pulse_4 {
  -webkit-animation: pulse 0.5s linear infinite alternate;
  animation: pulse 0.5s linear infinite alternate;
  animation-delay: 0.3s;
}

@-webkit-keyframes pulse {
  0% {
    transform: scaleY(1);
  }

  100% {
    transform: scaleY(0);
  }
}

@keyframes pulse {
  0% {
    transform: scaleY(1);
  }

  100% {
    transform: scaleY(0);
  }
}
